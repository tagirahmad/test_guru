<tr>
  <td><%= badge.name %></td>
  <td><%= link_to t('.image'), badge.image %></td>
  <td>
    <%= link_to t('.edit_button'), edit_admin_badge_path(badge) %>
  </td>
  <td>
    <%= link_to t('.delete_button'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('.delete_confirmation') }
    %>
  </td>
</tr>
