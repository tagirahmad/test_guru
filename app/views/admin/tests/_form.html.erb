<%= form_with model: [:admin, @test] do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <div class="form-group">
    <p>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control mt-1' %>
    </p>

    <p>
      <%= form.label :level %>
      <%= form.text_field :level, class: 'form-control mt-1' %>
    </p>

    <p>
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-select mt-1' } %>
    </p>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>